; WORKSPACES
(deflisten workspaces :initial "[]" "bash ~/.config/eww/scripts/get-workspaces")
(deflisten current_workspace :initial "1" "bash ~/.config/eww/scripts/get-active-workspace")
(defwidget workspaces []
  (box 
    :space-evenly true   
    :orientation "vertical"
    (label 
      :text "${workspaces}${current_workspace}" 
      :visible false
      )
    (for workspace in workspaces
      (button
        :tooltip "Workspace ${workspace.id}"
        :class "bar-button"
        :visible "${workspace.windows > 0 || workspace.id == current_workspace ?"true" : "false"}"        
        :onclick "hyprctl dispatch workspace ${workspace.id}"
        (box
        :class "${workspace.id == current_workspace ? "workspace-current" : ""}"
          :height 23
          :width 36
          :valign "center"
          :halign "center"
          (label 
            :text "${workspace.id}"
            )
          )
        )
      )
    )
  )


; BAR

(defwidget launcher []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Applications"
      :onclick "app-launcher"
      :class "bar-button"
      (image
        :path "assets/nixos-icon.svg"
        :image-height 36
        )
      )
    )
  )

(defwidget screenshot []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Screenshot"
      :onclick "hyprland-screenshot"
      :class "bar-button"
      (image
        :path "assets/camera.svg"
        :image-height 36
        )
      )
    )
  )

(defwidget colorpicker []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Color Picker"
      :onclick "hyprland-colorpicker"
      :class "bar-button"
      (image
        :path "assets/eyedropper.svg"
        :image-height 36
        )
      )
    )
  )

(deflisten network-icon-path :initial "assets/system-error.svg"
  `scripts/get-network-icon`)

(defwidget network []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Network"
      :onclick "nm-connection-editor & disown"
      :onrightclick "terminal nmtui & disown"
      :class "bar-button"
      (image
        :path network-icon-path
        :image-height 36
        )
      )
    )
  )


(deflisten volume-icon-path :initial "assets/system-error.svg"
  `scripts/get-volume-icon`)

(defwidget volume []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Audio Settings"
      :onclick "pavucontrol & disown"
      :onrightclick "terminal pulsemixer & disown"
      :class "bar-button"
      (image
        :path volume-icon-path
        :image-height 36
        )
      )
    )
  )


(defwidget poweroff []
  (box
    :orientation "v"
    :space-evenly "false"
    (button
      :tooltip "Power Off"
      :onclick "poweroff"
      :class "bar-button"
      (image
        :path "assets/system-shutdown.svg"
        :image-height 36
        )
      )
    )
  )

(defwidget top []
  (box
    :orientation "v"
    :space-evenly "false"
    :valign "start"
    (launcher)
    (screenshot)
    (colorpicker)
    ; (launcher) ; FREE SLOT
    ; (launcher) ; FREE SLOT
    ; (launcher) ; FREE SLOT
    )
  )

(defwidget middle []
  (box
    :orientation "v"
    :space-evenly "false"
    :valign "center"
    (workspaces)
    )
  )

(defwidget bottom []
  (box
    :orientation "v"
    :space-evenly "false"
    :valign "end"
    ; (poweroff) ; FREE SLOT
    ; (poweroff) ; FREE SLOT
    ; (poweroff) ; FREE SLOT
    (network)
    (volume)
    (poweroff)
    )
  )

(defwidget bar [] 
  (box 
    :class "eww-bar"
    :orientation "v"
    :vexpand "false"
    :hexpand "false"
    (top)
    (middle)
    (bottom)
    )
  )

(defwindow bar  
  :monitor 0
  :exclusive true
  :stacking "fg"
  :focusable false
  :namespace "eww-bar"
  :geometry 
    (geometry 
      :x "5px"
      :y "0px"
      :width "40px"
      :height "100%"
      :anchor "center left")
  (bar)
  )

; WALLPAPER

(defwidget wallpaper [] 
  (box 
    :class "wallpaper"
    :orientation "horizontal"
    )
  )

(defwindow wallpaper
  :exclusive false
  :stacking "bg"
  :focusable false
  :namespace "eww-wallpaper"
  :geometry
    (geometry :x "0%"
      :y "0%"
      :width "100%"
      :height "100%"
      :anchor "center right")
  (wallpaper)
  )
